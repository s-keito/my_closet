<div class="container">
  <div class="row">
    <div class="col-1"></div>
     <div class="col-10 my-5">
      <h2>search results</h2>
       <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>
          <table class="table table-hover table-inverse">
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <a><td>
                    <%= link_to user_path(user), class:"text-dark", style:"font-size:18px;" do %>
                      <%= user.name %>
                    <% end %>
                  </td></a>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <!--検索対象モデルがUserではない時(= 検索対象モデルがDressの時) -->
            <% @dresses.each do |dress| %>
              <%= link_to dress_path(dress) do %>
                <%= image_tag dress.get_image, size:'200x200' %>
              <% end %>
            <% end %>
        <% end %>
     </div>
    <div class="col-1"></div>
  </div>
</div>

