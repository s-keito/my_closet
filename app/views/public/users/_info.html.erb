<div class="container">
  <div class="row my-5">
    <div class="col-2">
      <%= image_tag user.get_user_image, style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
  	    <p><%= user.name %></p>

         <% if user.name != "guestuser" %>
          <% if user == current_user %>
           <%= link_to edit_user_path(user) do %>
            <div class="btn">
             <button type="button" class="btn btn-secondary"><i class="fas fa-user"></i> edit</button>
            </div>
           <% end %>
           <%= link_to unsubscribe_path(user) do %>
            <div class="btn">
             <button type="button" class="btn btn-secondary"><i class="fas fa-user"></i> 退会</button>
            </div>
           <% end %>
           <%= link_to rooms_path(user) do %>
            <div class="btn">
             <button type="button" class="btn btn-secondary"> DM一覧</button>
            </div>
           <% end %>
          <% end %>
         <% end %>

        <% if @user != current_user %>
          <div class="btn">
            <button type="button" class="btn btn-secondary">
              <% if current_user.following?(user) %>
                <%= link_to "フォロー中", user_relationships_path(user.id), class:"text-light", method: :delete %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), class:"text-light", method: :post %>
              <% end %>
            </button>
          </div>
           <div class="btn">
             <% unless @user.id == current_user.id %>
              <% if @is_room == true %>
               <%= link_to "メッセージへ", room_path(@room_id) %>
                <% else %>
                 <%= form_with model: @room do |f| %>
                   <%= fields_for @entry do |e| %>
                     <%= e.hidden_field :user_id, value: @user.id %>
                    <%= f.submit "メッセージを送る", class:"btn btn-secondary" %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% end %>
    </div>

    <div class="col-1"></div>
     <div class="col-9">
        <h3 class="text-dark">introduction</h3>
          <p class="introduction-text my-2">
           <%= @user.introduction %>
          </p>
          <div class="count my-5">
            <a><%= link_to followings_user_path(@user), class:"text-dark", style:"font-size:18px;" do %>
              フォロー数：<%= user.followings.count %><% end %></a>
            <a><%= link_to followers_user_path(@user), class:"text-dark", style:"font-size:18px;" do %>
            　フォロワー数：<%= user.followers.count %><% end %></a>
            　post数：<%= @count %>
            　<p><%=link_to"いいねした投稿",favorites_user_path(@user) %></p>
          </div>
     </div>
  </div>
</div>
