<div class="container">
  <div class="row">
    <div class="col-md-1 col-sm-1 col-xs-2">
    </div>
     <div class="col-md-10 col-sm-10 col-xs-8 my-5 text-center">
      <%=   flash[:error]  %>

      <h2>Log in</h2>
        <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-dark my-2" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>

      </div>
     <div class="col-md-1 col-sm-1 col-xs-2">
   </div>
  </div>
</div>

