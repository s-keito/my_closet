<div class="container">
  <div class="row">
    <div class="col"></div>
     <div class="col my-5">

        <%= form_with model: @dress, url: dress_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :caption %>
            <%= f.text_area :caption, class: 'form-control dress_caption' %>
          </div>

            <div class="form-group">
             <%= f.select :category, Dress.categories.keys %>
            </div>

            <div class="form-group">
              <%= f.submit class: 'btn btn-dark' %>
            </div>
          <% end %>

      </div>
   <div class="col"></div>
  </div>
</div>

